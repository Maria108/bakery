<div class="row">
  <% @catalog.each do |item| %>
    <div class="col l4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= item["pic"] %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= item["name"] %><i class="material-icons right">...</i></span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= item["name"] %><i class="material-icons right">close</i></span>
          <p class="info_cake"><%= item["description"] %></p>
          <p class="info_cake"><%= item["price"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
